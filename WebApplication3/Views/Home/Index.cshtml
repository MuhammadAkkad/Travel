@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Album example</h1>
        <p class="lead text-muted"> short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don't simply skip over it entirely.</p>

        <div class="container-box rotated">
            <button type="button" class="btn btn-primary btn-lg turned-button shadow-lg" data-toggle="modal" data-target="#myModal">Reach us</button>
        </div>

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content shadow-lg">
                    <div>
                        <button type="button" class="close mr-1" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-header">                        
                        <h4 class="modal-title">Reach us</h4>
                    </div>
                    <div class="modal-body">

                        <form role="form" method="post" id="reused_form">
                            <p>
                                Send your contact information and destenation in the form below and we will get back to you as early as possible.
                            </p>

                            <div class="form-group">
                                <label for="name">
                                    Name:
                                </label>
                                <input type="text" class="form-control"
                                       id="name" name="name" required maxlength="50">

                            </div>
                            <div class="form-group">
                                <label for="email">
                                    Email:
                                </label>
                                <input type="email" class="form-control"
                                       id="email" name="email" required maxlength="50">
                            </div>
                            <div class="form-group">
                                <label for="name">
                                    Message:
                                </label>
                                <textarea class="form-control" type="textarea" name="message"
                                          id="message" placeholder="Please provide us with your desired destenation and your questions"
                                          maxlength="6000" rows="7"></textarea>
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block" id="btnContactUs"> <i class="far fa-paper-plane"></i> </button>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>



<div class="card mb-3">
    <div class="row">
        @foreach (var movie in Model)
        {

            <div class="col-md-3">
                <div class="card mb-3 shadow-lg border-primary" style="margin-top:20px">
                    <h3 class="card-header">@movie.Name</h3>
                    <div class="card-body">
                        <h5 class="card-title">@movie.Country</h5>
                    </div>
                    <img style="height: 200px; width: 100%; display: block;" src="~/img/1.jpg" alt="@movie.Name">

                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">The Greatest thing!</h4>
                            <h6 class="card-subtitle mb-2 text-muted">@movie.Famous</h6>
                            <p class="card-text">@movie.FamousSubTitle</p>
                            <a class="card-link" asp-action="Details" asp-route-id="@movie.MovieId">Card link</a>
                            <a class="card-link" href="#">Another link</a>
                        </div>
                    </div>
                    <div class="card-footer text-info">
                       $@movie.Price
                    </div>
                </div>



            </div>
        }
    </div>
</div>
