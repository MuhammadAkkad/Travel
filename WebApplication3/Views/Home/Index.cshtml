@model IEnumerable<Trip>
@{
    ViewData["Title"] = "Index";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Album example</h1>
        <p class="lead text-muted"> short and leading about the collection below—its contents, 
             the creator, etc. Make it short and sweet, 
             but not too short so folks don't simply skip over it entirely.</p>

        <div class="container-box rotated">
            <button type="button" class="btn btn-primary btn-lg turned-button shadow-lg" 
                    data-toggle="modal" data-target="#ReachUs">Reach us</button>
        </div>

        <!-- Modal -->
        <div id="ReachUs" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content shadow-lg">
                    <div>
                        <button type="button" class="close mr-1" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-header">
                        <h4 class="modal-title">Reach us</h4>
                    </div>
                    <div class="modal-body">

                        <form role="form" method="post" id="reused_form">
                            <p>
                                Send your contact information and destenation in the form below and
                                we will get back to you as early as possible.
                            </p>

                            <div class="form-group">
                                <label for="name">
                                    Name:
                                </label>
                                <input type="text" class="form-control"
                                       id="name" name="name" required maxlength="50">

                            </div>
                            <div class="form-group">
                                <label for="email">
                                    Email:
                                </label>
                                <input type="email" class="form-control"
                                       id="email" name="email" required maxlength="50">
                            </div>
                            <div class="form-group">
                                <label for="name">
                                    Message:
                                </label>
                                <textarea class="form-control" type="textarea" name="message" id="message" 
                                          placeholder="Please provide us with your desired destenation and your questions"
                                          maxlength="6000" rows="7">
                                </textarea>
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block" id="btnContactUs"> 
                                <i class="far fa-paper-plane"></i> 
                            </button>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>



<div class="card mb-3">
    <div class="row">
        @foreach (var item in Model)
        {<!-- var movie in Model -->

            <div class="col-md-3">
                <div class="card mb-3 shadow-lg border-primary" style="margin-top:20px">
                    <h3 class="card-header">@item.City</h3> <!-- item.Name -->
                    <div class="card-body">
                        <h5 class="card-title">@item.Country</h5> <!-- item.Country -->
                    </div>
                    <img style="height: 200px; width: 100%; display: block;" src="~/img/1.jpg" alt="@item.City"> <!-- item.Name -->

                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">The Greatest thing!</h4>
                            <h6 class="card-subtitle mb-2 text-muted">@item.Famous</h6> <!-- movie.Famous -->
                            <p class="card-text">@item.FamousSubTitle</p>   <!-- movie.FamousSubTitle -->
                            <a class="card-link" asp-action="Details" asp-route-id="@item.TripId">Card link</a> <!-- movie.MovieId -->
                            <a class="card-link" data-toggle="modal" href="#BookNow">Book Now!</a>
                            <!-- Modal -->
                            <div id="BookNow" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content shadow-lg">
                                        <div>
                                            <button type="button" class="close mr-1" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-header">
                                            <h4 class="modal-title">Book Now!</h4>
                                        </div>
                                        <div class="modal-body">

                                            <form role="form" method="post" id="reused_form">

                                                <div class="form-group">
                                                    <label for="name">
                                                        Name:
                                                    </label>
                                                    <input type="text" class="form-control"
                                                           id="name" name="name" required maxlength="50">

                                                </div>
                                                <div class="form-group">
                                                    <label for="email">
                                                        Email:
                                                    </label>
                                                    <input type="email" class="form-control"
                                                           id="email" name="email" required maxlength="50">
                                                </div>

                                                <div class="form-group">
                                                    <label for="quantity">
                                                        number of people:
                                                    </label>
                                                    <input type="number" class="form-control"
                                                           id="name" name="quantity" min="1" required maxlength="50">

                                                </div>
                                                <div class="form-group">
                                                    <label for="name">
                                                        Date:
                                                    </label>
                                                    <input type="date" class="form-control"
                                                           id="name" name="name" required maxlength="50">

                                                </div>
                                                <div class="form-group">
                                                    <label for="message">
                                                        Message:
                                                    </label>
                                                    <textarea class="form-control" type="textarea" name="message" id="message"
                                                              placeholder="Please provide us with your question and any information we should know"
                                                              maxlength="6000" rows="7">
                                                    </textarea>
                                                </div>
                                                <button type="submit" class="btn btn-lg btn-primary btn-block" id="btnContactUs">
                                                    <i class="fas fa-shopping-cart"></i>
                                                </button>
                                            </form>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-info">
                        $@item.Price     <!-- movie.Price -->
                    </div>
                </div>



            </div>
        }
    </div>
</div>
