@model Trip
@{
    ViewData["Title"] = "Details";
}

<div class="jumbotron">
    <h1 class="display-3">@Model.City</h1> <!-- Name -->
    <p class="lead">@Model.Desc</p>
    <hr class="my-4">
    <img class="card-img-top shadow-lg" src="@Model.Photo" alt="@Model.City"> <!-- Name -->

    <p class="lead text-center mt-lg-5">
        <a class="btn btn-primary btn-lg btn-block shadow-lg" data-toggle="modal" href="#BookNow">Book Now!</a>
    </p>

    <!-- Modal -->
    <div id="BookNow" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content shadow-lg">
                <div>
                    <button type="button" class="close mr-1" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-header">
                    <h4 class="modal-title">Booking info</h4>
                </div>
                <div class="modal-body">

                    <form role="form" method="post" id="reused_form">

                        <div class="form-group">
                            <label for="name">
                                Name:
                            </label>
                            <input type="text" class="form-control"
                                   id="name" name="name" required maxlength="50">

                        </div>
                        <div class="form-group">
                            <label for="email">
                                Email:
                            </label>
                            <input type="email" class="form-control"
                                   id="email" name="email" required maxlength="50">
                        </div>

                        <div class="form-group">
                            <label for="quantity">
                                number of people:
                            </label>
                            <input type="number" class="form-control"
                                   id="name" name="quantity" min="1" required maxlength="50">

                        </div>
                        <div class="form-group">
                            <label for="name">
                                Date:
                            </label>
                            <input type="date" class="form-control"
                                   id="name" name="name" required maxlength="50">

                        </div>
                        <div class="form-group">
                            <label for="message">
                                Message:
                            </label>
                            <textarea class="form-control" type="textarea" name="message"
                                      id="message" placeholder="Please provide us with your question and any information we should know"
                                      maxlength="6000" rows="7"></textarea>
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary btn-block" id="btnContactUs">
                            <i class="fas fa-shopping-cart"></i>
                        </button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

<!-- done -->